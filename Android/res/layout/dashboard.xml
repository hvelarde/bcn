<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_wrapper" android:background="@drawable/bkhome"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/lay_action"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/imageView2" android:paddingTop="13dp"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:src="@drawable/logohome"></ImageView>
	</LinearLayout>

	<RelativeLayout android:id="@+id/lay_main"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@id/lay_action" android:paddingTop="6dp"
		android:layout_centerInParent="true">

		<ImageButton android:id="@+id/button1"
			android:layout_width="145dp" android:src="@drawable/bt_indicadores"
			android:layout_height="95dp" android:text="button1"
			android:layout_margin="5dip" />

		<ImageButton android:id="@+id/button2" android:layout_width="145dp"
			android:layout_height="95dp" android:layout_toRightOf="@id/button1"
			android:src="@drawable/bt_publicaciones" android:layout_margin="5dip" />

		<ImageButton android:id="@+id/button3" android:layout_width="145dp"
			android:layout_height="95dp" android:layout_below="@id/button1"
			android:src="@drawable/bt_notas" android:layout_margin="5dip" />

		<ImageButton android:id="@+id/button4" android:layout_width="145dp"
			android:layout_height="95dp" android:layout_toRightOf="@id/button3"
			android:layout_below="@id/button2" android:src="@drawable/bt_conferencias"
			android:layout_margin="5dip" />

		<ImageButton android:id="@+id/button5" android:layout_width="145dp"
			android:layout_height="95dp" android:layout_below="@id/button3"
			android:src="@drawable/bt_reciente" android:layout_margin="5dip" />

		<ImageButton android:id="@+id/button6" android:layout_width="145dp"
			android:layout_height="95dp" android:layout_toRightOf="@id/button5"
			android:layout_below="@id/button4" android:src="@drawable/bt_marcadores"
			android:layout_margin="5dip" />
	</RelativeLayout>
</RelativeLayout>